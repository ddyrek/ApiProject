@page "/counter"
@using Microsoft.Extensions.Logging @*using w przypadku użycia ILogerFactory*@
@*inject ILogger<Counter> logger @*instancja loggera tworzona za kazdym razem*@
@inject ILoggerFactory loggerFactor


<PageTitle>Counter</PageTitle>
<input type="checkbox" @bind-value="ShowCount" /> Show Count

@if (ShowCount)
{
    <Count></Count>
}

@code {
    public bool ShowCount { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        var logger = loggerFactor.CreateLogger<Counter>();
        logger.LogInformation("I'm in counter");
    }
}
